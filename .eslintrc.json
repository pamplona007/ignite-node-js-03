{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module",
        "requireConfigFile": false
    },
    "rules": {
        // yoda style
        "yoda": [
            "error",
            "always"
        ],
        // blank line at the end of the file
        "eol-last": [
            "error",
            "always"
        ],
        // 4 spaces identation
        "indent": [
            "error",
            2
        ],
        // \n eol
        "linebreak-style": [
            "error",
            "unix"
        ],
        // single quotes
        "quotes": [
            "error",
            "single"
        ],
        // semicolons at the end of every statement
        "semi": [
            "error",
            "always"
        ],
        // always add parenthesis in arrow functions
        "arrow-parens": [
            "error",
            "always"
        ],
        // add spaces inside braces
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-class-assign": "off",
        "space-infix-ops": ["error", { "int32Hint": false }],
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
        "no-prototype-builtins": 0
    },
    "globals": {
        "require": "writable",
        "process": "writable",
        "module": "writable",
        "describe": "readonly",
        "it": "readonly",
        "cy": "readonly",
        "expect": "readonly",
        "Cypress": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly"
    }
}
